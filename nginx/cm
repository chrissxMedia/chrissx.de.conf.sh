server {
	include /etc/nginx/server;
	server_name fonts.chrissx.de;
	root /fonts/dist;
	index "index";
	types { } default_type "text/css";
	add_header Access-Control-Allow-Origin *;
	expires 86400;
	location ~ .+\.([ot]tf|woff2?) {
		expires 31536000;
	}
}

