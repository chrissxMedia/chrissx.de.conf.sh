server {
	include /etc/nginx/server;
	server_name fonts.chrissx.de;
	root /var/deployment/dist/fonts/dist;
	index "index";
	types {
		font/woff  woff;
		font/woff2 woff2;
		font/otf   otf;
		font/ttf   ttf;
	}
	default_type "text/css";
	add_header Access-Control-Allow-Origin *;
	expires modified +1h;
	location /fonts/ {
		expires 365d;
	}
}

